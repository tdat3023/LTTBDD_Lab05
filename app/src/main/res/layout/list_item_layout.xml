<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">


    <ImageView
        android:id="@+id/image_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/donut_yellow_1" />

    <TextView
        android:id="@+id/tv_ten_banh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Ten banh"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_flag"
        app:layout_constraintTop_toTopOf="@+id/image_flag" />

    <TextView
        android:id="@+id/tv_banh_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="mo ta"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/image_flag"
        app:layout_constraintTop_toBottomOf="@+id/tv_ten_banh" />

    <TextView
        android:id="@+id/tv_gia"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="gia ca"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_flag"
        app:layout_constraintStart_toEndOf="@+id/image_flag"
        app:layout_constraintTop_toBottomOf="@+id/tv_banh_description" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="null"
        app:layout_constraintBottom_toBottomOf="@+id/image_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/button" />
</androidx.constraintlayout.widget.ConstraintLayout>